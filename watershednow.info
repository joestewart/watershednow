; ==============================================

; PROFILER MODULE - SITE-SPECIFIC CONFIGURATIONS
; (The following values will change per installation - Edit the values below to speed up the installation process.)

; ----------------------------------------------

; Set up admin users.

users[superduper][uid] = 1
users[superduper][name] = super-user
users[superduper][mail] = no-reply@thinkshout.com
users[superduper][status] = 1

users[admin][uid] = 2
users[admin][name] = admin
users[admin][mail] = no-reply+1@thinkshout.com
users[admin][status] = 1

; ----------------------------------------------

; Set up general site config.

; First set the default theme.
theme = watershed

variables[site_name] = Watershed Now Example
variables[site_mail] = no-reply@thinkshout.com
variables[site_slogan] = Lorem ipsum eam sale postea eu.

variables[site_mission] = 'Lorem ipsum eam sale postea eu, lorem ipsum vis ex natum doctus expetendis.'

variables[site_footer] = '&copy; 2010 Watershed Now is a <a href="http://thinkshout.com">ThinkShout</a> open source product.'

variables[site_newsletter] = '<form name="newsletter"><input type="text" name="user" value="Newsletter placeholder"/><input type="submit" value="Submit" /></form>'

